<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kon.demo">
    <uses-permission android:name="android.hardware.sensor.accelerometer" android:required="true" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/group1icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/group1icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".inventoryActivity"
            android:label="@string/inventory"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".settingsActivity"
            android:label="@string/settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".groceryActivity"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:label="@string/grocery_list">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".recipesActivity"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:label="@string/recipes">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".favoritesActivity"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:label="@string/favorites">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <service android:name=".onShake" />
    </application>

</manifest>