<?xml version="1.0" encoding="utf-8"?>
<!--This file has the layout for the main activity (landscape layout). For the layout we use the
    constraint layout, since it is responsive and can be easily adapted to our preferences. We use
    this layout for the buttons on this page. This page is also the homepage of the application-->

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="kon.demo.MainActivity">


    <ImageButton
        android:id="@+id/inventoryButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:background="@color/background"
        android:onClick="inventoryActivity"
        android:scaleType="fitXY"
        android:src="@drawable/inventory"
        app:layout_constraintBottom_toTopOf="@+id/horizontal2"
        app:layout_constraintEnd_toStartOf="@id/vertical2"
        app:layout_constraintStart_toStartOf="@id/vertical1"
        app:layout_constraintTop_toBottomOf="@+id/horizontal1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/inventoryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inventory"
        android:textColor="@color/TextColor"
        app:layout_constraintBottom_toTopOf="@id/horizontal3"
        app:layout_constraintEnd_toStartOf="@id/vertical2"
        app:layout_constraintStart_toStartOf="@id/vertical1"
        app:layout_constraintTop_toBottomOf="@id/horizontal2"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="166dp" />

    <ImageButton
        android:id="@+id/recipeButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:background="@color/background"
        android:onClick="RecipesActivity"
        android:scaleType="fitXY"
        android:src="@drawable/recipe2"
        app:layout_constraintBottom_toTopOf="@+id/horizontal2"
        app:layout_constraintEnd_toStartOf="@id/vertical4"
        app:layout_constraintStart_toStartOf="@id/vertical3"
        app:layout_constraintTop_toBottomOf="@+id/horizontal1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/recipeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/recipes"
        android:textColor="@color/TextColor"
        app:layout_constraintBottom_toTopOf="@id/horizontal3"
        app:layout_constraintEnd_toStartOf="@id/vertical4"
        app:layout_constraintStart_toStartOf="@id/vertical3"
        app:layout_constraintTop_toBottomOf="@id/horizontal2"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="166dp" />

    <ImageButton
        android:id="@+id/shoppingButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:background="@color/background"
        android:onClick="GroceryActivity"
        android:scaleType="fitXY"
        android:src="@drawable/shopping3"
        app:layout_constraintBottom_toTopOf="@+id/horizontal2"
        app:layout_constraintEnd_toStartOf="@id/vertical6"
        app:layout_constraintStart_toStartOf="@id/vertical5"
        app:layout_constraintTop_toBottomOf="@+id/horizontal1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/shoppingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/grocery_list"
        android:textColor="@color/TextColor"
        app:layout_constraintBottom_toTopOf="@id/horizontal3"
        app:layout_constraintEnd_toStartOf="@id/vertical6"
        app:layout_constraintStart_toStartOf="@id/vertical5"
        app:layout_constraintTop_toBottomOf="@id/horizontal2"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="166dp" />

    <ImageButton
        android:id="@+id/favoritesButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:background="@color/background"
        android:maxHeight="200dp"
        android:maxWidth="200dp"
        android:onClick="FavoritesActivity"
        android:scaleType="fitXY"
        android:src="@drawable/favorites3"
        app:layout_constraintBottom_toTopOf="@id/horizontal4"
        app:layout_constraintEnd_toStartOf="@id/vertical8"
        app:layout_constraintStart_toStartOf="@id/vertical7"
        app:layout_constraintTop_toBottomOf="@id/horizontal3"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/favoritesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favorites"
        android:textColor="@color/TextColor"
        app:layout_constraintBottom_toTopOf="@id/horizontal5"
        app:layout_constraintEnd_toStartOf="@id/vertical8"
        app:layout_constraintStart_toStartOf="@id/vertical7"
        app:layout_constraintTop_toBottomOf="@id/horizontal4"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="166dp" />

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:background="@color/background"
        android:onClick="settingsActivity"
        android:scaleType="fitXY"
        android:src="@drawable/settings1"
        app:layout_constraintBottom_toTopOf="@id/horizontal4"
        app:layout_constraintEnd_toStartOf="@id/vertical10"
        app:layout_constraintStart_toStartOf="@id/vertical9"
        app:layout_constraintTop_toBottomOf="@id/horizontal3"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/settingsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textColor="@color/TextColor"
        app:layout_constraintBottom_toTopOf="@id/horizontal5"
        app:layout_constraintEnd_toStartOf="@id/vertical10"
        app:layout_constraintStart_toStartOf="@id/vertical9"
        app:layout_constraintTop_toBottomOf="@id/horizontal4"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="166dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shake"
        app:layout_constraintBottom_toTopOf="@id/horizontalonCheck"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vertical6"/>

    <ToggleButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/shakeButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontalonCheck"
        app:layout_constraintStart_toStartOf="@id/vertical6"
        app:layout_constraintEnd_toEndOf="parent"/>

    <android.support.constraint.Guideline
        android:id="@+id/vertical1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/vertical2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <android.support.constraint.Guideline
        android:id="@+id/vertical3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <android.support.constraint.Guideline
        android:id="@+id/vertical4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />

    <android.support.constraint.Guideline
        android:id="@+id/vertical5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />

    <android.support.constraint.Guideline
        android:id="@+id/vertical6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <android.support.constraint.Guideline
        android:id="@+id/horizontal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.075" />

    <android.support.constraint.Guideline
        android:id="@+id/horizontal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <android.support.constraint.Guideline
        android:id="@+id/horizontal3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.525" />

    <android.support.constraint.Guideline
        android:id="@+id/horizontal4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <android.support.constraint.Guideline
        android:id="@+id/horizontal5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.99" />

    <android.support.constraint.Guideline
        android:id="@+id/vertical7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:id="@+id/vertical8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45" />

    <android.support.constraint.Guideline
        android:id="@+id/vertical9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55197656" />

    <android.support.constraint.Guideline
        android:id="@+id/vertical10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <android.support.constraint.Guideline
        android:id="@+id/horizontalonCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />


</android.support.constraint.ConstraintLayout>
